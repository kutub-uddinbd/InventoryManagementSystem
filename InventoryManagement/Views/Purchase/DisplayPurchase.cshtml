@model IEnumerable<InventoryManagement.Models.Purchase>

@{
    ViewBag.Title = "DisplayPurchase";
}

<h2>Display Purchase</h2>

<p>
    @Html.ActionLink("Create New", "PurchaseProduct","Purchase",new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr class="success">
        <th>
            @Html.DisplayName("Purchased Product")
        </th>
        <th>
            @Html.DisplayName("Purchased Quantity")
        </th>
        <th>
            @Html.DisplayName("Purchased Date")
        </th>
        
        <th>
            @Html.DisplayName("Actions")
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_qnty)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Purchase_date)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdatePurchase","Purchase",new { id=item.id },new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "PurchaseDetails","Purchase", new { id=item.id }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "DeletePurchase","Purchase", new { id=item.id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
