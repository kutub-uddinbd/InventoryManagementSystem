@model InventoryManagement.Models.Purchase

@{
    ViewBag.Title = "PurchaseDetails";
}

<h2>Purchased Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_product)
        </dd>

        <dt>
            @Html.DisplayName("Product Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_qnty)
        </dd>

        <dt>
            @Html.DisplayName("Purchased Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Purchase_date)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "UpdatePurchase","Purchase",new { id = Model.id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Cancle","DisplayPurchase", "Purchase",new {@class="btn btn-success" })
</p>
