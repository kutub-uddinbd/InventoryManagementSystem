@model InventoryManagement.Models.Sale

@{
    ViewBag.Title = "SaleDetails";
}

<h2>Sale Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Product Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_product)
        </dd>

        <dt>
            @Html.DisplayName("Sale Quantity")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_qnty)
        </dd>

        <dt>
            @Html.DisplayName("Sale Date")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sale_date)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "UpdateSale", "Sale", new { id = Model.id }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Cancle", "DisplaySale", "Sale", new { @class = "btn btn-success" })
</p>
